APP_NAME="Munjiz Platform"
APP_ENV=local
APP_KEY=base64:bf13w9sP++Ja4L27gmpiPBnw4dnQ32Dkcz5FsSdRcBs=
APP_DEBUG=true

# 1. إعدادات الروابط (مهمة جداً للربط مع رياكت)
# رابط السيرفر (الباك إند)
APP_URL=http://localhost:8000
# رابط الفرونت إند (Vite بيشتغل عادة على 5173)
FRONTEND_URL=http://localhost:5173

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
 APP_MAINTENANCE_STORE=database
 PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# 2. قاعدة البيانات (أبقيتها SQLite كما هي عندك مؤقتاً)
# لو حبيت تحول MySQL شيل التعليق من السطور اللي تحت وغير الـ CONNECTION لـ mysql
DB_CONNECTION=mysql
 DB_HOST=127.0.0.1
 DB_PORT=3306
 DB_DATABASE=munjiz_db
 DB_USERNAME=root
 DB_PASSWORD=

# 3. إعدادات الجلسات (حيوية لـ Sanctum SPA)
# غيرناها لـ cookie حسب الخطة
SESSION_DRIVER=cookie
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
# لازم يكون localhost عشان الكوكيز تتحفظ في المتصفح
SESSION_DOMAIN=localhost
SESSION_SECURE_COOKIE=false

# 4. إعدادات Sanctum (مضافة جديد لربط الفرونت)
# دي بتعرف لارافيل إن الطلبات اللي جاية من البورت ده مسموح ليها تعمل Login
SANCTUM_STATEFUL_DOMAINS=localhost:5173

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
 CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"
# عشان رياكت يعرف يكلم الباك إند
VITE_API_BASE_URL="${APP_URL}"